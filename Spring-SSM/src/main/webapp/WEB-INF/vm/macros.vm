                <li class="td-3" style="width: 10.1%; color: red;">$!subField.isRequired</li>
                <li class="td-4" style="width: 12.1%;">$!subField.demoValue</li>
                <li class="td-5" style="width: 15.2%;">$!subField.limitedDesc</li>
                <li class="td-6" style="width: 25%;">$!subField.desc</li>
