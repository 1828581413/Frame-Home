    #set($num=$num+1)
    #foreach($subField in $!subFields)
        #if($subField.subFields != "[]")
            <ul class="tr  tableTrigger">
                <li class="td-1" style="width: 21.6%; text-indent: $stringUtil.add($textIndent,"px");">
                    <i class="fa fa-plus-square-o"></i> $!subField.fieldName
